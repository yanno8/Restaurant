<title>Create Admin</title>

<div class="container mt-5 w-50">
    <img src="/logo/image.png" width="10" height="170"
        style="display: block; margin-left: auto; margin-right: auto; width: 50%;">
    <h1 class="my-3 text-center">Create an administrator</h1>
    <center><%- include('partials/messages') %></center>
        <form action="/create/admin" method="POST"><br>
            <!--begin::Input group-->
            <div class="row fv-row mb-7">
                <!--begin::Col-->
                <div class="col-xl-6">
                    <label class="form-label fw-bolder text-dark fs-6">First Name</label>
                    <input class="form-control " type="text" placeholder="" name="firstName" autocomplete="off" />
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-xl-6">
                    <label class="form-label fw-bolder text-dark fs-6">Last Name</label>
                    <input class="form-control " type="text" placeholder="" name="lastName" autocomplete="off" />
                </div>
                <!--end::Col-->
            </div>
            <!--begin::Input group-->
            <div class="fv-row mb-7">
                <label class="form-label fw-bolder text-dark fs-6">Email</label>
                <input class="form-control" type="email" placeholder="" name="email" autocomplete="off" />
            </div>
            <div class="fv-row mb-7">
                <label class="form-label fw-bolder text-dark fs-6">Address</label>
                <input class="form-control" type="address" placeholder="" name="address" autocomplete="off" />
            </div>
            <div class="fv-row mb-7">
                <label class="form-label fw-bolder text-dark fs-6">Phone</label>
                <input class="form-control" type="text" placeholder="" name="phone" autocomplete="off" inputmode="numeric" />
            </div>
            <div class="fv-row mb-7">
                <label class="form-label fw-bolder text-dark fs-6">Birthday</label>
                <input class="form-control" type="date" placeholder="" name="birthday" autocomplete="off" />
            </div>
            <div class="fv-row mb-7">
                <label class="form-label fw-bolder text-dark fs-6">Birthday Place</label>
                <input class="form-control" type="text" placeholder="" name="birthdayPlace" autocomplete="off" />
            </div>
            <div class="fv-row mb-7">
            <label class="form-label fw-bolder text-dark fs-6">Country</label>
            <select name="country" class="form-control">
                <option class="text-muted" style="color: gray;" disabled selected hidden> </option>
                <% countries.forEach((country) => { %>
                    <option value="<%= country.name %> "><%= country.name %> </option>
                <% }) %>
            </select>
            </div>
            <!--begin::Input group-->
            <div class="mb-10 fv-row" data-kt-password-meter="true">
                <!--begin::Wrapper-->
                <div class="mb-1">
                    <!--begin::Label-->
                    <label class="form-label fw-bolder text-dark fs-6">Password</label>
                    <!--end::Label-->
                    <!--begin::Input wrapper-->
                    <div class="position-relative mb-3">
                        <input class="form-control " type="password" placeholder="" name="password" autocomplete="off" />
                    </div>
                    <!--end::Input wrapper-->
                    <!--begin::Meter-->
                    <div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
                    </div>
                    <!--end::Meter-->
                </div>
                <!--end::Wrapper-->
                <!--begin::Hint-->
                <div class="text-muted">Use 8 or more characters with a mix of letters, numbers &amp; symbols.</div>
                <label class="form-label fw-bolder text-dark fs-6">Confirm Password</label>
                <input class="form-control" type="password" placeholder="" name="confirmPassword" autocomplete="off" /><br>
                <label style="font-size: 15px; margin-right: 1rem;" class="form-label fw-bolder text-dark fs-6">Sex: </label>
                <input type="radio" name="gender" id="male" value="male" style="margin-top: 1.2rem;">
                <label style="margin-right: 5rem; font-size: 15px;"class="form-label fw-bolder text-dark fs-6">Male</label>
                <input type="radio" name="gender" id="female" value="female" style="margin-top: 1.2rem;">
                <label style="margin-right: 5rem; font-size: 15px;" class="form-label fw-bolder text-dark fs-6">Female</label> <br>
            </div>
            <!--end::Input group-->
            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-primary">
                        Submit
                    </button>
            </div>
        </form>
</div>