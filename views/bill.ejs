<title>Bill Registration</title>

<div class="container mt-5 w-50">
    <img src="/logo/image.png" width="10" height="170"
        style="display: block; margin-left: auto; margin-right: auto; width: 50%;">
    <h1 class="my-3 text-center">Bill Registration</h1>
    <center><%- include('partials/messages') %></center>
        <form action="/create/bill" method="POST">
            <div class="container px-0">
                <div class="row" style="margin-top: 2rem;">
                    <div class="col-sm">
                        <label class="form-label fw-bolder text-dark fs-6">First Name</label>
                        <input type="text" name="firstName" class="form-control" placeholder="">
                    </div>
                    <div class="col-sm">
                        <label class="form-label fw-bolder text-dark fs-6">Last Name</label>
                        <input type="text" name="lastName" class="form-control" placeholder="">
                    </div>
                </div>
            </div><br>
            <div class="fv-row mb-7">
            <label class="form-label fw-bolder text-dark fs-6">Waiter</label>
            <select name="waiter" class="form-control">
                <option class="text-muted" > </option>
                <% waiter.forEach((waiters)=>{ %>
                    <option value="<%= waiters.firstName%> <%= waiters.lastName%>"><%= waiters.firstName%> <%= waiters.lastName%></option>
                <% }) %>
            </select>
            </div>
            <div class="fv-row mb-7">
            <label class="form-label fw-bolder text-dark fs-6">Food</label>
            <select name="food" class="form-control ">
                <option class="text-muted" > </option>
                <% food.forEach((foods) => { %>
                    <option value="<%= foods.name %> "><%= foods.name %> </option>
                <% }) %>
            </select>
            </div>
            <div class="fv-row mb-7">
            <label class="form-label fw-bolder text-dark fs-6">Drink</label>
            <select name="drink" class="form-control ">
                <option class="text-muted"> </option>
                <% drink.forEach((drinks) => { %>
                    <option value="<%= drinks.name %> "><%= drinks.name %> </option>
                <% }) %>
            </select>
            </div>
            <div class="fv-row mb-7">
            <label class="form-label fw-bolder text-dark fs-6">Total</label>
            <select name="total" class="form-control">
                <option value=""></option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
            </select>
            </div>
            <div class="fv-row mb-7">
                <label class="form-label fw-bolder text-dark fs-6">Amount</label>
                <input class="form-control " type="text" placeholder="" name="amount" autocomplete="off" />
            </div><br>
            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-primary">
                        Submit
                    </button>
            </div>
        </form>
</div>