<body>
            <center><%- include('partials/messages') %></center>
    <div class="col-md-4 col-md-offset-4">
        <div>
            <p>Ordering Foods
            </p>
        </div>
        <div class="form-group">
                <form id="form1" method="post">
                    <label>Title</label>
                    <input id="title" type="text" name="title" placeholder="" required="" class="form-control"><br/>
                    <label>First Name</label>
                    <input id="first" type="text" name="firstName" placeholder="" required="" class="form-control"><br/>
                    <label>Last Name</label>
                    <input id="last" type="text" name="lastName" placeholder="" required="" class="form-control"><br/>
                    <label>Email</label>
                    <input type="email" name="email" placeholder="" required="" class="form-control"><br/>
                    <label>Confirm Email</label>
                    <input type="email" name="confEmail" placeholder="" required="" class="form-control"><br/>
                    <label>telephone</label>
                    <input id="phone" type="text" name="telephone" placeholder="" required="" class="form-control"><br/>
                    <label>City</label>
                    <input id="city" type="text" name="city" placeholder="" required="" class="form-control"><br/>
                    <label>Place</label>
                    <input id="place" type="text" name="place" placeholder="" required="" class="form-control"><br/>
                    <label>Food</label>
                    <input id="food" type="text" name="food" placeholder="" required="" class="form-control"><br/>
                    <label>Date</label>
                    <input id="date" type="date" name="date" placeholder="" required="" class="form-control"><br/>
                    <label>Time</label>
                    <input id="time" type="time" name="time" placeholder="" required="" class="form-control"><br/>
                    <input id="submit" type="submit" value="Confirm" class="btn btn-success">
                </form>
        </div>
        <span class="image-ronde-bg"></span>
        <div class="mssg bg-danger">
            <span id="check"></span>
        </div>
        <div id="LangTable">
            <a href="/confirm" id="aaa"></a>
